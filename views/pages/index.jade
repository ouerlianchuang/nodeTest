extends ../layout

block content
    .container
        .row
            each item in movies
                .col-md-2
                    a(href='/movie/#{item._id}')
                        img(class="img-responsive" src="#{item.poster}", alt="#{item.title}")
                    .caption
                        h3 #{item.title}
                        p: a.btn.btn-primary(href='/movie/#{item._id}') 观看


